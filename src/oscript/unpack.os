Функция СформироватьURLПодключенияКGit(Знач URLРепозитария, Знач Пользователь, Знач Пароль)
	
	РазделительСхемыURL = "://";
	ДлинаРазделителя = СтрДлина(РазделительСхемыURL);
	
	ПозицияРазделителя = Найти(URLРепозитария, РазделительСхемыURL);
	Если ПозицияРазделителя = 0 Тогда
		ВызватьИсключение "Некорректно сформирован URL репозитария";
	КонецЕсли;
	
	Схема = Лев(URLРепозитария, ПозицияРазделителя + ДлинаРазделителя - 1);
	Адрес = Сред(URLРепозитария, ПозицияРазделителя + ДлинаРазделителя);
	
	РазделительАвторизацииИАдреса = "@";
	
	Если Не ПустаяСтрока(Пароль) Тогда
		ПарольДляURL = ":" + СтрЗаменить(Пароль, РазделительАвторизацииИАдреса, "%40");
	Иначе
		ПарольДляURL = "";
	КонецЕсли;
	
	СтрокаПодключения = Схема + Пользователь + ПарольДляURL + РазделительАвторизацииИАдреса + Адрес;
	ВывестиОтладочноеСообщение("URL для git-push: <"+СтрокаПодключения+">");
	
	Возврат СтрокаПодключения;
	
КонецФункции

Функция ВыполнитьGitPush(Знач ЛокальныйРепозиторий, Знач УдаленныйРепозиторий, Знач ИмяВетки, Знач Пользователь, Знач Пароль) Экспорт

	URL = СформироватьURLПодключенияКGit(УдаленныйРепозиторий, Пользователь, Пароль);
	
	КомандныйФайл = СоздатьВременныйФайл(".bat");
	Запись = Новый ЗаписьТекста(КомандныйФайл, "cp866");
	
	Запись.ЗаписатьСтроку("cd /d """ + ЛокальныйРепозиторий + """");
	
	ИмяФайлаЛогаКоммита = СоздатьВременныйФайл("log");
	
	КомандаGit = " push -u " + СтрЗаменить(URL, "%", "%%") + " --all -v";
	
	строкаКоманды = """" + мПараметры.ПутьGit + """" + КомандаGit + " > " + ИмяФайлаЛогаКоммита + " 2>&1";
	сообщение = "строкаКоманды = <"+?(строкаКоманды = Неопределено, "Неопределено", строкаКоманды)+">";
	ВывестиОтладочноеСообщение(сообщение);
	Запись.ЗаписатьСтроку(строкаКоманды);

	Запись.ЗаписатьСтроку("exit /b %ERRORLEVEL%");
	Запись.Закрыть();
	
	Результат = ЗапуститьПакетныйФайл(КомандныйФайл);
	
	текст = "";
	ПолучитьТекстФайла(ИмяФайлаЛогаКоммита, текст);
	ВывестиСообщение(текст);
	ЗавершитьПроцесс_TGitCache_exe();
	
	Возврат Результат;
	
КонецФункции
 
